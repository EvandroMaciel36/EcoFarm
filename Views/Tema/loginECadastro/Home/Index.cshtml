
@{
    Layout = "~/Views/Tema/"+ViewBag.tema+"/Layout.cshtml";
}

<link href="~/css/home.css" rel="stylesheet" />
<img id="logoEco" src="~/img/Logo_EcoFarm.png" alt="Logo EcoFarm" />

        <div class="login-container">
        <form>
            <label for="usuario">Usuário</label>
            <input type="text" id="usuario" placeholder="">
            
            <label for="senha">Senha</label>
            <input type="password" id="senha" placeholder="">
            
            <button type="submit" class="btn btn-success">ENTRAR</button>
        </form>
        </div>
        <div class="extras">
            <p class="link">Esqueceu sua senha? <a class="btn btn-secondary btn-sm">clique aqui!</a>
            <p class="link">Ainda não tem usuário? <a href="@Url.Action("Index", "Cadastro")" class="btn btn-secondary btn-sm">cadastre-se</a>
        </div>
