@model EcoFarm.Models.CadastroModel

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Tema/" + ViewBag.tema + "/Layout.cshtml";
}
<link href="~/css/cadastro.css" rel="stylesheet" />

<div class="cadastro-container">
    <div class="logo">
        <img id="logoEco" src="~/img/Logo_EcoFarm.png" alt="Logo EcoFarm" />
    </div>
    <h1 class="textoCad">Faça seu cadastro abaixo!</h1>
    <form class="form-cadastro">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @id = "nome", @maxlength = "100", @required = "required" })
        @Html.ValidationMessageFor(m => m.Nome)

        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @type = "email", @id = "email", @maxlength = "150", @required = "required" })
        @Html.ValidationMessageFor(m => m.Email)

        @Html.LabelFor(m => m.Telefone)
        @Html.TextBoxFor(m => m.Telefone, new { @id = "telefone", @minlength = "11", @maxlength = "20", @required = "required" })
        @Html.ValidationMessageFor(m => m.Telefone)

        @Html.LabelFor(m => m.Endereco)
        @Html.TextBoxFor(m => m.Endereco, new { @id = "endereco", @maxlength = "200", @required = "required" })
        @Html.ValidationMessageFor(m => m.Endereco)

        @Html.LabelFor(m => m.nome_usuario, "Nome de usuário")
        @Html.TextBoxFor(m => m.nome_usuario, new { @id = "usuario", @maxlength = "50", @required = "required" })
        @Html.ValidationMessageFor(m => m.nome_usuario)

        @Html.LabelFor(m => m.senha, "Senha")
        @Html.PasswordFor(m => m.senha, new { @id = "senha", @minlength = "8", @maxlength = "255", @required = "required" })
        @Html.ValidationMessageFor(m => m.senha)

        @Html.Label("ConfirmarSenha", "Confirmar senha")
        <input type="password" id="confirmar-senha" name="ConfirmarSenha" minlength="8" required />
        <span class="field-validation-valid" data-valmsg-for="ConfirmarSenha" data-valmsg-replace="true"></span>

        <div class="termos">
            <input type="checkbox" id="termos" name="termos" required>
            <label for="termos">Concordo em aceitar os termos de serviço e a política de privacidade</label>
        </div>

        <button type="submit" class="btn btn-success">CADASTRAR</button>
    </form>
</div>
<script src="~/js/cadastro.js"></script>
