@{
    ViewBag.Title = "Recuperação de Senha";
    Layout = "~/Views/Tema/" + ViewBag.tema + "/Layout.cshtml";
}
<link href="~/css/recuperarSenha.css" rel="stylesheet" />
<script src="~/js/recuperarSenha.js"></script>

    <div class="cadastro-container">
        <div class="logo">
            <img id="logoEco" src="~/img/Logo_EcoFarm.png" alt="Logo EcoFarm" />
        </div>
                <h1>Recuperação de Senha</h1>
    <form class="form-cadastro" action="@Url.Action("Index", "Home")">
      <label for="nomeUsuario">Nome do usuário:</label>
      <input type="text" id="nomeUsuario" name="nomeUsuario"required>
      <p id="mensagemErroUsuario" class="erro"></p>
        
      <label for="email">E-mail:</label>
      <input type="email" id="email" name="email"required>
      <p id="mensagemErroEmail" class="erro"></p>


      <label for="novaSenha" id="labelSenha">Nova senha:</label>
      <input type="text" id="novaSenha" name="novaSenha"required>
      <p id="mensagemErroNovaSenha" class="erro"></p>

      <button type="submit" class="btn btn-success">gerar nova senha</button>
    </form>
            </div>