<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layoutSiteECompra.css" asp-append-version="true" />
    <script src="~/js/search.js"></script>
</head>
<body>
    <!-- Cabeçalho -->
<header>
    <!-- Logo -->
    <div class="logo">
        <img src="~/img/Logo_EcoFarm.png" alt="Logo EcoFarm" onclick="window.location.href='@Url.Action("Index", "PaginaInicial")'">
    </div>

    <!-- Barra de busca -->
    <div class="search-bar">
        <input type="text" placeholder="Buscar produtos" id="search">
    </div>

    <!-- Carrinho -->
    <div class="cart">
<img src="~/img/carrinho.png" alt="Carrinho" onclick="window.location.href='@Url.Action("Index", "Carrinho")'">
        <span>Meu carrinho</span>
    </div>
</header>

    <!-- Barra de categorias -->
    <nav class="category-bar">
        <a href="/Produto/Legumes">
            <img src="~/img/legumes.png" alt="Legumes">Legumes
        </a>
        <a href="/Produto/Frutas">
            <img src="~/img/frutas.png" alt="Frutas">Frutas
        </a>
        <a href="/Produto/Verduras">
            <img src="~/img/verduras.png" alt="Verduras">Verduras
        </a>
    </nav>

    <!-- Conteúdo principal -->
    <main id="main-content">
        @RenderBody()
    </main>
            <div id="resultados" class="resultados-container" style="color: black;"></div>

</body>
</html>
